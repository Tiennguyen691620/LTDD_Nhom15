<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad4"
    tools:context=".GridItemActivity"
    android:padding="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        >

        <Button
            android:id="@+id/cancell"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/back"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <Button
                android:id="@+id/search"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/search" />

            <Button
                android:id="@+id/home"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/home" />

            <Button
                android:id="@+id/cart"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shop" />

            <Button
                android:id="@+id/more"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/more" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:padding="2dp"
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:src="@drawable/bo"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:padding="2dp"
                android:id="@+id/countryFlagIv2"

                android:layout_width="80dp"
                android:layout_height="40dp"
                android:src="@drawable/fdy1"/>
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/name"
                android:text="Điện Thoại Oppo A52 2020 (6GB/128GB) "
                android:textSize="15dp"
                android:textColor="#242424"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <ImageView
                android:padding="2dp"
                android:id="@+id/countryFlagIv1"

                android:layout_width="80dp"
                android:layout_height="20dp"
                android:src="@drawable/star1"/>

            <TextView
                android:id="@+id/nhanxet"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:gravity="center"

                android:textSize="12dp"
                android:text="425 nhận xét"
                android:textColor="#787878" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/gia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:text="4.750.000đ"
                android:textColor="#242424"
                android:textSize="18dp"
                android:textStyle="bold" />

             <TextView
            android:id="@+id/giamgia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"


            android:text="(-20%)"
            android:textColor="#787878" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/chon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textStyle="bold"
        android:background="@color/white"
        android:text="Chọn Mua"
        android:textColor="#D32F2F"
        android:textSize="15dp" />


</RelativeLayout>